<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @coop.name %>
</p>

<table>
	<tr>
		<th>Meal</th>
		<% @days.each do |day| %>
			<th><%= day %></th>
		<% end %>
	</tr>
	<tr>
		<td class='meal breakfast'>Breakfast</td>
		<% @breakfasts.each do |meal| %>
			<% if meal %>
				<%= render 'meals/table_show', meal: meal %>
			<% end %>
		<% end %>
	</tr>
		<tr>
		<td class='meal lunch'>Lunch</td>
		<% @lunches.each do |meal| %>
			<% if meal %>
				<%= render 'meals/table_show', meal: meal %>
			<% end %>
		<% end %>
	</tr>
		<tr>
		<td class='meal dinner'>Dinner</td>
		<% @dinners.each do |meal| %>
			<% if meal %>
				<%= render 'meals/table_show', meal: meal %>
			<% end %>
		<% end %>
	</tr>
</table>

<!-- The box that will follow the mouse holding the meal info -->
<div id='mealInfo'></div>

<%= link_to 'Edit', edit_coop_path(@coop) %> |
<%= link_to 'Back', coops_path %>
