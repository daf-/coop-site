<!DOCTYPE html>
<html>
<head>
  <title>CO-OPERATION NATION</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class='header'>
  <% unless @hide_nav_links %>
    <div class='site_nav'>
      <% if current_user %>
        <%= link_to 'meals_calendar', coop_path(current_user.coop), class: (@selected == 'calendar') ? 'selected tab' : 'tab' %>|
        <%= link_to 'shifts hub', user_path(current_user), class: (@selected == 'shifts') ? 'selected tab' : 'tab' %>|
      <% end %>

      <%= link_to 'Other co-ops', root_path, class: 'tab' %>|
      <% if current_user %>
        <%= link_to 'Sign out', signout_path, class: 'tab' %>
      <% else %>
        <%= link_to 'Sign in', "/auth/google_login", class: 'tab' %>
      <% end %>

      <% if current_user %>
        <%= link_to 'my account', edit_user_path(current_user), class: (@selected == 'edit_user') ? 'selected tab' : 'tab' %>
      <% end %>
    </div>
  <% end %>

  <div class='title'>CO-OPERATION NATION</div>
</div>

<%= yield %>

</body>
</html>
