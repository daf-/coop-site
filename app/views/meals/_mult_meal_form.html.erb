        <%= label_tag "2nd Hour Cook" %>
      </span>
      <span class='shift'>
        <%= check_box_tag "pre_crew_breakfast", true, (@coop.pre_crew_breakfast.to_i > 0) %>
        <%= label_tag "Pre-Crew" %>
      </span>
      <span class='shift'>
        <%= check_box_tag "crew_breakfast", true, (@coop.crew_breakfast.to_i > 0) %>
        <%= label_tag "Crew" %>
      </span>
      <span class='shift'>
        <%= check_box_tag "custom_shift_1_b", true, (@coop.custom_shift_1_b && @coop.custom_shift_1_b.length > 0) %>
        <%= text_field_tag "custom_shift_1_b", @coop.custom_shift_1_b, placeholder: 'other' %>
      </span>
      <span class='shift'>
        <%= check_box_tag "custom_shift_2_b", true, (@coop.custom_shift_2_b && @coop.custom_shift_2_b.length > 0) %>
