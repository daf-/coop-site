      </span>
      <span class='day'>
        <%= label_tag "Sunday" %>
        <%= check_box_tag "sunday_breakfast", true, (@coop.sunday_breakfast.to_i > 0) %>
      </span>
    </div>

    <div class='shifts'>
      <h3>Associated Shifts</h3>
      <span class='shift'>
        <%= check_box_tag "kp_breakfast", true, (@coop.kp_breakfast.to_i > 0) %>
        <%= label_tag "Kitchen Prep (KP)" %>
      </span>
      <span class='shift'>
