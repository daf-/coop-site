<% if meal.cancelled %>
  <div class='cancelled'>
    <span class='cancel_text'>CANCELLED</span>
    <% if @user && @user.coop == @coop %>
    <%= link_to 'edit', edit_coop_meal_path(@coop, meal), class: 'meal_edit_link' %>
      <div class='mouseover'>
        <% if @private_info %>
          <% if meal.head_cook %>
            <h3>Head Cook:</h3>
            <p><%= User.find(meal.head_cook).username %></p>
          <% end %>
          <% if meal.meal_info.present? %>
            <h3>Public Info</h3>
            <p><%= meal.meal_info %></p>
          <% end %>
          <% if meal.discussion_info.present? %>
            <h3>Member Info</h3>
            <p><%= meal.discussion_info %></p>
          <% end %>
          <% if meal.user %>
            <h3>Last Edited By:</h3>
            <p><%= meal.user.username %></p>
          <% end %>
      <% else %>
        <% if meal.meal_info.present? %>
            <h3>Meal Info</h3>
            <p><%= meal.meal_info %></p>
        <% end %>
      <% end %>
      </div>
    <% end %>
  </div>
<% else %>
<% if meal == @next_meal %>
  <div class='next_meal'>
<% else %>
  <div class='a_meal'>
<% end %>
  <div class='meal_info_holder'>
    <div class='namearea'>
      <% if meal.name %>
      <span class='name'><%= meal.name %></span>
      <% else %>
      <span class='type'><%= "#{meal.day} #{meal.meal_type}" %></span>
      <% end %>
    </div>
    <% if meal.irreg_time %>
    <div class='time'>
      <%= calendarTime(meal.start_time) %>
    </div>
    <% end %>
      <% if (@private_info && meal.has_private_info?) || ((!@private_info) && meal.has_public_info?) %>
        <div class='more_info'>click for more info</div>
      <% end %>
    </div>
      <div class='mouseover'>
        <% if @private_info %>
          <% if meal.head_cook %>
            <h3>Head Cook:</h3>
            <p><%= User.find(meal.head_cook).username %></p>
          <% end %>
          <% if meal.meal_info.present? %>
            <h3>Public Info</h3>
            <p><%= meal.meal_info %></p>
          <% end %>
          <% if meal.discussion_info.present? %>
            <h3>Member Info</h3>
            <p><%= meal.discussion_info %></p>
          <% end %>
          <% if meal.user %>
            <h3>Last Edited By:</h3>
            <p><%= meal.user.username %></p>
          <% end %>
      <% else %>
        <% if meal.meal_info.present? %>
            <h3>Meal Info</h3>
            <p><%= meal.meal_info %></p>
        <% end %>
      <% end %>
    </div>
    <% if @user && @user.coop == @coop %>
    <%= link_to 'edit', edit_coop_meal_path(@coop, meal), class: 'meal_edit_link' %>
    <% end %>
  </div>
<% end %>