<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="coop">
    Member of <%= @coop.name %>
  </div>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, required: 'required' %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, readonly: 'readonly' %>
  </div>

  <div class="field">
    <%= f.label :display_email %><br>
    <%= f.check_box :display_email %>
  </div>

  <div class="phone">
    <%= f.label :phone %><br>
    <%= f.phone_field :phone %>
  </div>

  <div class="field">
    <%= f.label :display_phone %><br>
    <%= f.check_box :display_phone %>
  </div>

  <div class="field">
    <%= f.label "I'm Head Cook/PIC trained" %><br>
    <%= f.check_box :pic %>
  </div>

  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
